{
    "version": "0.2.0",
    "configurations": [
      {
        "description": "FastAPI app - to be run from within the container",
        "name": "FastAPI - within",
        "type": "python",
        "request": "launch",
        "module": "uvicorn",
        "args": [
          "backend.main:app",
          "--host",
          "0.0.0.0",
          "--port",
          "${env:CONTAINER_STREAMLIT_PORT}"
        ],
        "env": {
          "DATABASE_URL": "postgresql://user:password@db:5432/numbersdb"
        },
        "jinja": true,
        "justMyCode": false
      }
    ]
}
