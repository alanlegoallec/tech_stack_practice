{
  "version": "0.2.0",
  "configurations": [
      {
          "description": "Flask app - to be run from outside the container",
          "name": "Flask - outside",
          "type": "python",
          "request": "attach",
          "connect": {
            "host": "localhost",
            "port": 5678
          },
          "pathMappings": [
            {
              "localRoot": "${workspaceFolder}",
              "remoteRoot": "/app"
            }
          ]
        },
        {
          "description": "UI app - to be run from outside the container",
          "name": "UI - outside",
          "type": "python",
          "request": "attach",
          "connect": {
            "host": "localhost",
            "port": 5679
          },
          "pathMappings": [
            {
              "localRoot": "${workspaceFolder}",
              "remoteRoot": "/app"
            }
          ]
        },
  ]
}
